// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PrintifyOrder {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  orderNumber   Int      @unique
  printifyId    String
  customerName  String
  customerEmail String
  date          DateTime
  numLineItems  Int
  totalShipping Float
  totalTax      Float
  totalCost     Float
}

model ShopifyOrder {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  orderNumber Int
  revenue     Float
  customer    String
  createdAt   String
  lineItems   Json[]
}

model DailyAnalytics {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  date     String
  data     Json
  expenses Json[]
}

model Expense {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  amount      Int
  startDate   String
  endDate     String
  frequency   Int
  isRecurring Boolean
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  timeCreated DateTime
  timeUpdated DateTime
  UTM         Json
  ip          String   @unique
  events      Json[]
}
